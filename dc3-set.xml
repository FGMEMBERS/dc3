<?xml version="1.0"?>
<!--
************************************************************************
Douglas DC3 simulation config. This files ties together all the components
used by FGFS to represent the DC3. Components include the flight data 
model, instrument panel, and external 3D model.
3D models can be downloaded from http://home.t-online.de/home/Wolfram.Kuss/

October 23 2001 John Check, fgpanels@rockfish.net
************************************************************************
-->

<PropertyList>
 <sim>

  <description>Douglas DC-3</description>
  <author>David Megginson</author>

  <flight-model>yasim</flight-model>
  <aero>dc3</aero>
  <fuel-fraction>1.0</fuel-fraction>

  <sound>
   <path>Aircraft/dc3/Sounds/dc3-sound.xml</path>
  </sound>
  
<!-- Definies para splash screen -->
	<startup>
		<splash-texture>Aircraft/dc3/splash.png</splash-texture>
	</startup>

  <panel>
   <path>Aircraft/c310/c310-vfr-panel.xml</path>
   <visibility>false</visibility>
  </panel>
  <panel_2>
   <path>Aircraft/c310/c310-mini-panel.xml</path>
  </panel_2>

<!-- modificações para funcionamento dos liveries - http://wiki.flightgear.org/index.php/Livery_over_MP -->
  <model>
   <path>Aircraft/dc3/Models/dc3-dpm.xml</path>
		<livery>
            <name type="string">Trans Canada</name>
            <texture>dc3-01.rgb</texture>
		</livery>   
        <propeller>
            <name type="string">Trans Canada</name>
            <texture>dc3-03.rgb</texture>
        </propeller>      
        <wings>
            <name type="string">Trans Canada</name>
            <texture>dc3-02.rgb</texture>
        </wings> 	
  </model> 

  <virtual-cockpit archive="y">false</virtual-cockpit>
  <allow-toggle-cockpit archive="y">true</allow-toggle-cockpit>

  <view>
   <internal archive="y">true</internal>
   <config>
     <!-- x/y/z == right/up/back -->
     <x-offset-m archive="y">-0.38</x-offset-m>
     <y-offset-m archive="y">0.00</y-offset-m>
     <z-offset-m archive="y">-1.30</z-offset-m>
     <pitch-offset-deg>-12</pitch-offset-deg>
   </config>
  </view>

  <chase-distance-m type="double" archive="y">-45.0</chase-distance-m>

  <help>
   <title>Douglas DC-3</title>
  </help>
  
<!-- O menu de ajuda dessa aeronave -->
		<help>
			<title>Douglas DC-3</title>
			<line>Choose your favorit texture using the key above</line>
			<key>
				<name>l</name>
				<desc>Brings up the Livery Switching Dialog</desc>
			</key>
			<key>
				<name>Ctrl+B</name>
				<desc>Toggle SpeedBrake</desc>
			</key>
		</help>  
		
<!-- Entradas para o menu de apoio para controle da aeronave -->
		<menubar>
			<default>
				<menu n="100">
					<label>DC-3</label>
					<enabled type="bool">true</enabled>
					<item>
						<label>Select Livery</label>
						<binding>
							<command>nasal</command>
							<script>aircraft.livery.dialog.open()</script>
						</binding>
					</item>		
				</menu>
			</default>
		</menubar>
		  
 </sim>

 <controls>
  <engines>
   <engine n="0">
    <magnetos>3</magnetos>
   </engine>
   <engine n="1">
    <magnetos>3</magnetos>
   </engine>
  </engines>
 </controls>

 <engines>
  <engine>
   <rpm type="double">700</rpm>
  </engine>
  <engine>
   <rpm type="double">700</rpm>
  </engine>
 </engines>
  
 <autopilot>
   <config>
     <min-climb-speed-kt type="float">100.0</min-climb-speed-kt>
     <best-climb-speed-kt type="float">120.0</best-climb-speed-kt>
     <target-climb-rate-fpm type="float">1000.0</target-climb-rate-fpm>
     <target-descent-rate-fpm type="float">1000.0</target-descent-rate-fpm>
     <elevator-adj-factor type="float">6000.0</elevator-adj-factor>
     <integral-contribution type="float">0.005</integral-contribution>
     <zero-pitch-throttle type="float">0.45</zero-pitch-throttle>
     <zero-pitch-trim-full-throttle type="float">0.001</zero-pitch-trim-full-throttle>
   </config>
 </autopilot>
 
	<!-- Códigos NASAL -->
	<nasal>
	    <livery>
	        <file>Aircraft/dc3/Nasal/livery.nas</file>
	    </livery>
	</nasal> 

</PropertyList>
